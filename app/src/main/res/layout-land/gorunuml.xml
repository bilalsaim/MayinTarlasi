<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplanrenk"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textAlignment="gravity"
    tools:context=".control.Gorunumler" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/gorunum_renk"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/gRadioGroupKare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/gRadioKare1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:checked="true"
                        android:drawableRight="@drawable/kare3"
                        android:text="@string/mor"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/gRadioKare2"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:drawableRight="@drawable/kare2"
                        android:gravity="left|center_vertical|start"
                        android:text="@string/kirmizi"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/gRadioKare3"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:drawablePadding="7dp"
                        android:drawableRight="@drawable/kare1"
                        android:gravity="center_vertical|start|clip_vertical"
                        android:text="@string/yesil"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/gRadioKare4"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:drawableRight="@drawable/kare4"
                        android:gravity="right|center_vertical|start"
                        android:text="@string/turuncu"
                        android:textSize="18sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/gorunum_sekil"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/gRadioGroupMayin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/gRadioMayin1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:checked="true"
                        android:drawableRight="@drawable/mayinkizgin"
                        android:paddingTop="5dp"
                        android:text="@string/gorunum_kizgin"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/gRadioMayin2"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:drawableRight="@drawable/mayinmutlu"
                        android:text="@string/gorunum_mutlu"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/gRadioMayin3"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:drawableRight="@drawable/mayinuzgun"
                        android:text="@string/gorunum_uzgun"
                        android:textSize="18sp" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <Button
                android:id="@+id/gBtnKaydet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/kaydet"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:typeface="normal" />

            <Button
                android:id="@+id/gBtnGeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/geri"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:typeface="normal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>