<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplanrenk"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".control.Secenekler" >

    <LinearLayout
        android:id="@+id/sLinear1"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sNestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:fillViewport="true"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sTextDuzey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Zorluk Düzeyi"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:focusableInTouchMode="true"/>

                <RadioGroup
                    android:id="@+id/sRadioGroupZorluk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:measureWithLargestChild="false"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp">

                    <RadioButton
                        android:id="@+id/sRadioZorluk1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:onClick="onRadioButtonClicked"
                        android:paddingBottom="0dp"
                        android:text="Acemi\n10 Mayın\n9 x 9 Döşeme"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/sRadioZorluk2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:onClick="onRadioButtonClicked"
                        android:paddingBottom="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:text="Deneyimli\n40 Mayın\n16 x 16 Döşeme"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/sRadioZorluk3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:onClick="onRadioButtonClicked"
                        android:text="Uzman\n99 Mayın\n16 x 30 Döşeme"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/sRadioZorluk4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:onClick="onRadioButtonClicked"
                        android:text="Özel"
                        android:textSize="14sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/sTextYukseklik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genişlik (9-16)"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/sBoxYukseklik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="true"
                    android:ems="10"
                    android:enabled="false"
                    android:text="9"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sTextGenislik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Yükseklik (9-30)"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/sBoxGenislik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:editable="true"
                    android:ems="10"
                    android:enabled="false"
                    android:text="9"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/sTextMayin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Mayın (10-400)"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/sBoxMayin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="true"
                    android:ems="10"
                    android:enabled="false"
                    android:text="10"
                    android:textSize="13sp">

                    <requestFocus />
                </EditText>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sTextOzellikler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Özellikler"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/sCheckSoruIsareti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soru işareti" />

            <CheckBox
                android:id="@+id/sCheckSes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sesleri Çal" />

            <Button
                android:id="@+id/sBtnKaydet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kaydet" />

            <Button
                android:id="@+id/sBtnGeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geri" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>