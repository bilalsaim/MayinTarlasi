<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oyunmenuarkaplan"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OyunMenu" >

    <Button
        android:id="@+id/mYeniBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mKayitliBtn"
        android:text="Yeni Oyun" />

    <Button
        android:id="@+id/mKayitliBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mYeniBtn"
        android:text="Kayıtlı Oyun" />

    <Button
        android:id="@+id/mOlusturBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mKayitliBtn"
        android:layout_below="@+id/mKayitliBtn"
        android:text="Oyun Oluştur" />

    <Button
        android:id="@+id/mDevamBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mOlusturBtn"
        android:layout_below="@+id/mOlusturBtn"
        android:text="Devam Et" />

    <Button
        android:id="@+id/mIstatistikBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mDevamBtn"
        android:layout_below="@+id/mDevamBtn"
        android:text="İstatistikler" />

    <Button
        android:id="@+id/mSecenekBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mIstatistikBtn"
        android:layout_below="@+id/mIstatistikBtn"
        android:text="Seçenekler" />

    <Button
        android:id="@+id/mGorunum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mSecenekBtn"
        android:layout_below="@+id/mSecenekBtn"
        android:text="Görünüm" />

    <Button
        android:id="@+id/gerib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mGorunum"
        android:layout_below="@+id/mGorunum"
        android:text="Geri" />

</RelativeLayout>