<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/arkaplanrenk"
    tools:context=".control.YeniOyun">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/yoTextSure"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_gravity="top"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:text="000"
				android:textColor="#FFFFFF"
				android:textSize="25sp" />

			<ImageButton
				android:id="@+id/yoBtnBaslat"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@drawable/smiley_button_states"
				android:padding="5dip"
				android:scaleType="center" />

			<TextView
				android:id="@+id/yoTextMayinSayisi"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_gravity="top"
				android:layout_weight="1"
				android:gravity="center_horizontal"
				android:text="000"
				android:textColor="#FFFFFF"
				android:textSize="25sp" />

		</LinearLayout>

        <com.otaliastudios.zoom.ZoomLayout
			android:id="@+id/mayinYakinlastirma"
			android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:scrollbars="vertical|horizontal"
            app:overScrollHorizontal="true"
            app:overScrollVertical="true"
            app:overPinchable="true"
            app:horizontalPanEnabled="true"
            app:verticalPanEnabled="true"
            app:zoomEnabled="true"
            app:minZoom="0.7"
            app:minZoomType="zoom"
            app:maxZoom="3.0"
            app:maxZoomType="zoom"
            app:hasClickableChildren="true"
            xmlns:android="http://schemas.android.com/apk/res/android">

                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/MayinAlani"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*"
                        tools:context=".control.YeniOyun">
					</TableLayout>

		</com.otaliastudios.zoom.ZoomLayout>
    </LinearLayout>
</RelativeLayout>